@import 'style/weui.wxss';

.container {
  width: 100%;
	font-family:'微软雅黑';
  background-color: #fafafa;
  overflow: hidden;
  box-sizing: border-box;
}
.grey{
  color: #aaa;
}
.maintext{
  color: #015f89;
}

page {
	background: #f8f8f8;
	color: #015f89;
}

button {
	background-color: #015f89;
	height: 45px;
	width: 90%;
	color: #fff;
	font-size: 18px;
	border-radius: 20px;
}
.date {
  font-size: 23rpx;
  margin-right: 1.067rem;
  color: #898989;
}

.time{
  font-size: 65rpx;
}


/*圆形提醒*/
.inner{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #eee;
  border:1px solid #e1e1e1;
  font-size:23rpx;
  text-align: center;
  line-height: 100rpx;
}
.remindme{
  color: #fff;
  background: #015f89;
}
.reminding{
  color: #015f89;
}
.reminded{
  background: #fff;
  color: #898989;
}