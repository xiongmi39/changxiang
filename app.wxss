.input {
  width: 80%;
  margin: 0 auto;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
  border-bottom: 1px solid #015f89;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

.warnmsg{
  width: 80%;
  margin: 10px auto;
  color: #cf4227;
  font-size: 33rpx;
  line-height: 1.3rem;
}

.cancelbtn{
  width: 15px;
  height: 15px;
  position: absolute;
  display: inline-block;
  right: 10px;
  top: 10px;
}
.sendTxt{
  position: absolute;
  font-size: 30rpx;
  right: 15%;
  top: 40%;
}
.calendar{
  height: 20px;
  width: 20px;
}
.warntext{
  font-size: 25rpx;
  color: #898989;
  margin: 0 auto;
  width: 80%;
  margin-top: -20px;
}