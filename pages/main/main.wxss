/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}

.swiper {
  height: 300rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

.longgrid{
  height: 310rpx;
  margin: 5px 0;
}
.shortgrid{
  height: 250rpx;
  margin: 5px 0;
}


.weui-grid{
  width: 100%;
  background: #fff;
}

.mainTitle{
  text-align: center;
  font-family:'微软雅黑';
  color: #002f45;
  font-size: 1.2rem;
  padding: 15px;
}

.weui-grid__label{
  color: #095983;
}

.weui-flex__item{
  margin:  0 5px;
}
