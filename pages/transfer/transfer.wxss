.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/*折叠面板*/
.tui-accordion-content{
  margin: 10px;
  border: 1px solid #c8c7cc;
  border-radius: 5px;
  overflow: hidden;
}
.tui-accordion-from{padding-left: 0;}
.tui-accordion-from input{
  height: 80rpx;
  line-height: 80rpx;
}

.tui-input-name{
  height: 80rpx;
  float: left;
  width: 200rpx;
}
.tui-show{display: block;}
.tui-hide{display: none;}
.tui-hide .down{
  display: block;
  transform :rotate(-180deg);
}

.weui-label{
  width: 130px;
  text-align: right;
  margin-right: 10px;
  color: #6c6c6c;
}
.weui-input{
  color: #015f89;
}
.radio-group{
  line-height: 2.58823529em;
  
}
.radio-cell{
  border-bottom: 1px solid #eee;
}
picker{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 90px;
  top: 0px;
}
.dateInput{
  line-height: 2.58823529em;
  text-align: left;
  border-bottom: 1px solid #015f89;
  display: inline-block;
  margin-bottom: 5px;
}
.line-css {
    height: 1px;
    background: #015f89;
    margin: 0 auto;
    width: 80%;
    display: inline-block;
}
.down{
  display: inline-block;
  position: absolute;
  top: 20rpx;
  right: 40rpx;
  width: 17px;
  height: 22px;
}